#!/usr/bin/env node

'use strict'

const {execSync} = require('child_process')
let command = `ozy rollup ${process.argv[2]} | browserify -`

if (process.env.NODE_ENV === 'production') {
  command += ' | uglifyjs -m -c warnings=false'
}

try {
  execSync(command, {stdio: 'inherit'})
} catch (error) {
  process.exit(1)
}
